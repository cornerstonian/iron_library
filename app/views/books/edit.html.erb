<h1> Edit <%= @book.title %> </h1>


<%= form_for @book, url: update_book_path do |f| %>
<div class="form-group">
    <%= f.label :title%>
   <%= f.text_field :title, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :price %>
  <%= f.text_field :price, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :photo_url %>
  <%= f.text_field :photo_url, class: 'form-control' %>
</div>

<div class="form-group">
    <h2><%= f.label :author_id, "Author" %></h2>
    <%= f.collection_select :author_id, Author.all, :id, :last_name_first, {prompt: true}, class:'form-control' %>
</div>

<div>
  <%= button_tag(type: 'submit', class: "btn btn-info btn-lg") do %>
    <i class="glyphicon glyphicon-book"></i> Save Your Edit
    <% end %>
</div>

  <% end %>
